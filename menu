#include <stdio.h>

int main()
{

int propiedad,opcion,banos,habitacion,metros;
printf("Bienvenidos a la web de la Inmobiliaria\n");
printf("Seleccione la opcion 1 si desea comprar y la opcion 2 si desea aquilar\n");

scanf("%i",&opcion);

if(opcion==1)
{
	printf("Ha seleccionado la opcion de comprar\n");
	printf("Seleccione ahora el tipo de propiedad 1-Piso 2-Casa 3-Local\n");
	scanf("%i",&propiedad);
	
	switch (propiedad)
	{
		case 1:
			printf("Ha seleccionado piso\n");
			printf("Seleccione el numero de baños y habitaciones que desea\n");
			scanf("%i %i",&banos,&habitacion);
			break;
		case 2:
			printf("Ha seleccionado casa\n");
			printf("Seleccione el numero de baños y habitaciones que desea\n");
			scanf("%i %i",&banos,&habitacion);
			break;
		case 3:
			printf("Ha seleccionado local\n");
			printf("Aproxime el tamaño del local (en metros cuadrados)\n");
			scanf("%d",&metros);
			break;

	}
}

else if(opcion==2)
{
	printf("Ha seleccionado la opcion de alquilar\n");
	printf("Seleccione ahora el tipo de propiedad 1-Piso 2-Casa 3-Local\n");
	scanf("%i",&propiedad);
	
		switch (propiedad)
	{
		case 1:
			printf("Ha seleccionado piso\n");
			printf("Seleccione el numero de baños y habitaciones que desea\n");
			scanf("%i %i",&banos,&habitacion);
			break;
		case 2:
			printf("Ha seleccionado casa\n");
			printf("Seleccione el numero de baños y habitaciones que desea\n");
			scanf("%i %i",&banos,&habitacion);
			break;
		case 3:
			printf("Ha seleccionado local\n");
			printf("Aproxime el tamaño del local (en metros cuadrados)\n");
			scanf("%d",&metros);
			break;

	}
}

else
{ printf("Opcion no valida\n");
}


return 0;

}
